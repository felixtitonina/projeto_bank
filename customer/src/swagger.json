    "servers": [
        {
            "url": "http://localhost:3002/api",
            "description": "HML"
        },
        {
            "url": "http://a3integra.com.br/api",
            "description": "PRD"
        }
    ],
    "paths": {
        "/customers": {
            "post": {
                "summary": "Cadastro de clintes",
                "description": "Esta rota ira cadastrar novos clientes",
                "tags": [
                    "Customer"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Customer"
                            },
                            "examples": {
                                "customer": {
                                    "value": {
                                        "name": "felix tito nina",
                                        "email": "email@outlook.com",
                                        "document": "430477178790",
                                        "businessName": "tito it"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Não autorizado."
                    },
                    "409": {
                        "description": "Documento já cadastrado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Consulta clintes",
                "description": "Esta rota consultar clientes",
                "tags": [
                    "Customer"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Pagina",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limite",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "id",
                        "in": "query",
                        "description": "Id do cliente",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Nome do cliente",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-mail",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "document",
                        "in": "query",
                        "description": "CNPF ou CNPJ",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Status do cadastrado",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Não autorizado."
                    },
                    "409": {
                        "description": "Documento já cadastrado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/customers/{id}": {
            "get": {
                "summary": "Consulta um clinte",
                "description": "Esta rota consultar um cliente",
                "tags": [
                    "Customer"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do cliente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Não autorizado."
                    },
                    "409": {
                        "description": "Documento já cadastrado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Customer": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "document": {
                        "type": "string"
                    },
                    "businessName": {
                        "type": "string"
                    }
                }
            }
        }
    }
}